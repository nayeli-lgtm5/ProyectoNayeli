        {
          titulo: "Conjunto moderno",
          img: "https://images.unsplash.com/photo-1521572163474-6864f9cf17ab",
          desc: "Conjunto moderno para ocasiones especiales.",
        },
        {
          titulo: "Blusa floral",
          img: "https://images.unsplash.com/photo-1519741497674-611481863552",
          desc: "Blusa floral ligera y cómoda.",
        },
        {
          titulo: "Perfume elegante",
          img: "https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f",
          desc: "Perfume con aroma elegante y duradero.",
        },
        {
          titulo: "Zapatos de tacón",
          img: "https://images.unsplash.com/photo-1532634896-26909d0d4b6a",
          desc: "Zapatos de tacón con diseño minimalista.",
        },
        {
          titulo: "Aretes de perlas",
          img: "https://images.unsplash.com/photo-1505693416388-ac5ce068fe85",
          desc: "Aretes de perlas naturales.",
        },
        {
          titulo: "Vestido de verano",
          img: "https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9",
          desc: "Vestido elegante de verano.",
        },
        {
          titulo: "Cartera de piel",
          img: "https://images.unsplash.com/photo-1551024739-78e9d60c45ca",
          desc: "Cartera compacta de piel sintética.",
        },
        {
          titulo: "Sombrero tejido",
          img: "https://images.unsplash.com/photo-1504198453319-5ce911bafcde",
          desc: "Sombrero tejido ideal para el sol.",
        },
      ];

      const grid = document.getElementById("productosGrid");
      productos.forEach((p) => {
        const div = document.createElement("div");
        div.className =
          "bg-white p-3 rounded-2xl shadow-md cursor-pointer hover:scale-105 transition";
        div.innerHTML = `<img src="${p.img}" alt="${p.titulo}" class="w-full h-48 object-cover rounded-2xl"><p class="mt-3 text-sm text-gray-700">${p.titulo}</p>`;
        div.onclick = () => abrirModal(p.titulo, p.img, p.desc);
        grid.appendChild(div);
      });

      function abrirModal(titulo, img, desc) {
        document.getElementById("modal-title").textContent = titulo;
        document.getElementById("modal-img").src = img;
        document.getElementById("modal-desc").textContent = desc;
        document.getElementById("modal").classList.remove("hidden");
      }
      function cerrarModal() {
        document.getElementById("modal").classList.add("hidden");
      }

      // Menú activo dinámico al hacer scroll
      const sections = document.querySelectorAll("section[id]");
      const menuLinks = document.querySelectorAll("nav ul li a");

      window.addEventListener("scroll", () => {
        let current = "";
        sections.forEach((section) => {
          const sectionTop = section.offsetTop - 80;
          if (pageYOffset >= sectionTop) current = section.getAttribute("id");
        });
        menuLinks.forEach((link) => {
          link.classList.remove("active");
          if (link.getAttribute("href") === `proyecto.html#${current}`)
            link.classList.add("active");
        });
      });
    </script>
